@model IEnumerable<SimpleTodoMvc.Models.ToDo>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Add a new ToDo item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                To Do List
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Description
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
